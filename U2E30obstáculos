<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Clase obst√°culos </title>
    <style>
        canvas {
            background-color: #FFD4F0;
        }
    </style>
</head>

<body>

    <canvas width="500" height="500" id="myCanvas"></canvas>
        
    <script>
        var canvas = document.getElementById("myCanvas");
        var ctx = canvas.getContext("2d");
        var dir = 0, speed = 10; 
        const walls = []
       

        class Cuadrado {
            constructor(x,y,w,h,c){
                this.x = x;
                this.y = y;
                this.w = w;
                this.h = h;
                this.c = c;
            }

            paint(ctx) {

                ctx.fillStyle = this.c;
                ctx.fillRect (this.x, this.y, this.w, this.h);
                ctx.strokeRect (this.x, this.y, this.w, this.h);

            }

            seTocan(otro) {
                if(this.x < otro.x + otro.w &&
                   this.x + this.w > otro.x &&
                   this.y < otro.y + otro.h &&
                   this.y + this.h > otro.y )
                {
                    return true;
                }
                return false;
            }
        }

        const player = new Cuadrado(225, 225, 50, 50, "black");
        const target = new Cuadrado(randomInteger(460), randomInteger(460), 40, 40, "black");

        walls.push (new Cuadrado(90, 370, 320, 30, "pink"))
        walls.push (new Cuadrado(90, 50, 320, 30, "pink"))
        walls.push (new Cuadrado(90, 170, 320, 30, "pink"))


        window.requestAnimationFrame = (function () {
            return window.requestAnimationFrame ||
                window.webkitRequestAnimationFrame ||
                window.mozRequestAnimationFrame ||
                function (callback) {
                    window.setTimeout(callback, 17);
                };
        }());

        document.addEventListener("keydown", (e) => {
            
            switch (e.keyCode) {

                case 87:
                    dir = 1;
                break;
                case 83:
                    dir = 2;
                break;
                case 68:
                    dir = 3;
                break;
                case 65:
                    dir = 4;
                break;
                case 32:
                    speed+=5;
                break;
            }

        })


        function update() {

            if (dir == 1) {
                player.y-=speed;
                if (player.y+50 < 0) {
                    player.y = 550;
                }
            }

            if (dir == 2) {
                player.y+=speed;
                if (player.y+50 > 500) {
                    player.y = -50;
                }
            }

            
            if (dir == 3) {
                player.x+=speed;
                if (player.x+50 > 500) {
                    player.x = -50;
                }
            }

            if (dir == 4) {
                player.x-=speed;
                if (player.x+50 < 0) {
                    player.x = 550;
                }
            }

            if (player.seTocan(target)) {
                target.x = randomInteger(460);
                target.y = randomInteger(460);
            }

            for (var i = walls.length - 1; i >=0; i--) {
               
                if (player.seTocan(walls[i])) {
                 

                if (dir == 1) {
                    player.y+=speed;
                }

                if (dir == 2) {
                    player.y-=speed;
                }

                if (dir == 3) {
                    player.x-=speed;
                }

                if (dir == 4) {
                    player.x+=speed;
                }

                dir = 0;
         }
                
    }

    player.c = randomRgbColor();
    paint();
    window.requestAnimationFrame(update);

}

        

        function paint() {
            ctx.fillStyle = "white";
            ctx.fillRect (0, 0, 500 , 500);

            player.paint(ctx);

            target.paint(ctx);

            for (var i = walls.length - 1; i >=0; i--) {
                walls[i].paint(ctx);
            }
            

            //ctx.fillStyle = randomRgbColor();
            //ctx.fillRect (x, y, 50, 50);
            //ctx.strokeRect (x, y, 50, 50);

        }
        update();


        function randomRgbColor() {
            let r = randomInteger(255);
            let g = randomInteger(255);
            let b = randomInteger(255);
            return `rgba(${r},${g},${b},0.5)`;
        }
        
        function randomInteger(max) {
            return Math.floor(Math.random() * (max + 1));
        }

    </script>
</body>
</html>
